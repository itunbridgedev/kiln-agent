// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -------------------------
// Customer
// -------------------------
model Customer {
  id           String           @id @default(uuid())
  firstName    String?
  lastName     String?
  email        String?          @unique
  phone        String?
  status       String           @default("active")
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  // Relations
  authIdentities AuthIdentity[]
  customerRoles  CustomerRole[]
}

// -------------------------
// AuthIdentity (OAuth / Email)
// -------------------------
model AuthIdentity {
  id             String          @id @default(uuid())
  customerId     String
  provider       String
  providerUserId String
  email          String?
  emailVerified  Boolean         @default(false)
  createdAt      DateTime        @default(now())
  lastLoginAt    DateTime?

  customer       Customer        @relation(fields: [customerId], references: [id])
  emailCredential EmailCredential?

  @@unique([provider, providerUserId])
}

// -------------------------
// Email Credentials for AuthIdentity
// -------------------------
model EmailCredential {
  authIdentityId    String   @id
  passwordHash      String
  passwordUpdatedAt DateTime @default(now())

  authIdentity      AuthIdentity @relation(fields: [authIdentityId], references: [id])
}

// -------------------------
// Roles (for permissions)
// -------------------------
model Role {
  id             Int             @id @default(autoincrement())
  name           String          @unique

  customerRoles  CustomerRole[]
}

// -------------------------
// Many-to-Many linking Customer <-> Role
// -------------------------
model CustomerRole {
  customerId String
  roleId     Int

  customer Customer @relation(fields: [customerId], references: [id])
  role     Role     @relation(fields: [roleId], references: [id])

  @@id([customerId, roleId])
}
